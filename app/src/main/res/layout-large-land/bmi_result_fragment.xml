<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result"
                    android:textSize="40sp"
                    android:textColor="#fff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"/>
            <LinearLayout
                    android:id="@+id/result_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_result"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryLight"
            >
                <TextView
                        android:id="@+id/bmi_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NORMAL"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="30dp"
                />
                <TextView
                        android:id="@+id/bmi_vlaue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.67"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:textSize="40sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                />
                <TextView
                        android:id="@+id/bmi_range_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal BMI range :"
                        android:textColor="@color/disableColor"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                />
                <TextView
                        android:id="@+id/bmi_range_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18,5-25 kg/m2"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:layout_marginBottom="30dp"
                />
                <TextView
                        android:id="@+id/bmi_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This healthy weight helps reduce your risk of serious health conditions and means youâ€™re close to your fitness goals."
                        android:textColor="#fff"
                        android:gravity="center_horizontal"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                />
                <Button
                        android:id="@+id/save"
                        android:layout_width="700dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="@string/save"
                        android:textColor="#fff"
                        android:background="@color/save_button"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="50dp"
                />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
            android:id="@+id/recalculate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/recalculate_bmi"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"/>
</RelativeLayout>